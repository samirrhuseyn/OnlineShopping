@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_publicLayout.cshtml";
}

<div class="banners-area pb-30 bg-grey">
    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <!-- Hero Area -->
