@model IEnumerable<EntityLayer.Concrete.Product>
<div class="our-products-area mt-30">
    <div class="section-title">
        <h3 style="text-transform:uppercase">Endirimdə olan məhsullar</h3>
        <a style="margin-left:800px; margin-bottom:5px;" class="btn btn-primary">Bütün məhsullar</a>
    </div>
    
    <div class="tab-content" id="bstab2-ontent">
        <div class="tab-pane fade show active" id="bstab2-area1" role="tabpanel" aria-labelledby="bstab2-area1-tab">
            <div class="product-slider our-products-slider slider-navigation-2">
                @foreach (var product in Model)
                {
                    @if(product.DiscountedPrice != null)
                    {
                         <div class="product-slider-col">
                        <!-- Single Product -->
                        <article class="hoproduct">
                            <div class="hoproduct-image">
                                <a class="hoproduct-thumb" href="product-details.html">
                                    <img class="hoproduct-frontimage" src="@product.Image1" alt="product image">
                                    <img class="hoproduct-backimage" src="@product.Image2" alt="product image">
                                </a>
                                <ul class="hoproduct-actionbox">
                                    <li><a href="#"><i class="lnr lnr-cart"></i></a></li>
                                </ul>
                                @if (product.DiscountedPrice != null)
                                {
                                    <ul class="hoproduct-flags">
                                        <li class="flag-discount">-@product.Interest%</li>
                                    </ul>
                                }
                                else
                                {

                                }

                            </div>
                            <div class="hoproduct-content">
                                <h5 class="hoproduct-title"><a href="product-details.html">@product.ProductName</a></h5>
                                <div class="hoproduct-rattingbox">
                                    <div class="rattingbox">
                                        <span class="active"><i class="ion ion-ios-star"></i></span>
                                        <span class="active"><i class="ion ion-ios-star"></i></span>
                                        <span class="active"><i class="ion ion-ios-star"></i></span>
                                        <span class="active"><i class="ion ion-ios-star"></i></span>
                                        <span class="active"><i class="ion ion-ios-star"></i></span>
                                    </div>
                                </div>
                                <div class="hoproduct-pricebox">
                                    @if (product.DiscountedPrice != null)
                                    {
                                        <del class="oldprice">@product.Price ₼</del>
                                        <span class="price">@product.DiscountedPrice ₼</span>
                                    }
                                    else
                                    {
                                        <span class="price">@product.Price ₼</span>
                                    }
                                </div>
                            </div>
                        </article>
                        <!--// Single Product -->
                        </div>
                    }
                    else
                    {
                        
                    }
                }
            </div>
        </div>

    </div>
</div>