@model IEnumerable<EntityLayer.Concrete.Category>
<div class="categories-area mt-30">
	<div class="section-title">
		<h3>KATEQORİYALAR</h3>
	</div>
	<div class="categories-slider slider-navigation-2 slider-navigation-2-m0">
		@foreach(var category in Model)
		{
			<div class="category-wrapper">
				<div class="category">
					<a href="shop-rightsidebar.html" style="height:50px; width:50px;">
						<img src="@category.Image" alt="category image">
					</a>
					<div style="margin-left:15px;" class="category-content">
						<h5 class="category-title">@category.Name</h5>
						<a href="#" class="category-productlink">Shop Now <i class="ion ion-md-arrow-dropright"></i></a>
					</div>
				</div>
			</div>

		}


	</div>
</div>
