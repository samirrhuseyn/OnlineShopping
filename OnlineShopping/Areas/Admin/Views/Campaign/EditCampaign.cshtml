@using OnlineShopping.Areas.Admin.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model EditCampaignViewModel
@{
    ViewData["Title"] = "Kompaniyanı redaktə et!";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}


<div class="row">
    <div class="col-xl-12">
        <div class="card">

            <div class="card-body">

                <div class="row">
                    <form method="post" enctype="multipart/form-data" asp-controller="Campaign" asp-action="EditCampaign">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="CampaignID" hidden/>
                        <div class="col-xl-3 col-lg-4">
                            <label class="form-label text-primary">Profil şəkli<span class="required">*</span></label>
                            <div class="avatar-upload">
                                <div class="avatar-preview">
                                    <div id="imagePreview" style="height:150px; width:900px; background-image: url(@Model.ImagePreview);">
                                    </div>
                                </div>
                                <div class="change-btn mt-2 mb-lg-0 mb-3">
                                    <input asp-for="Image" type='file' class="form-control d-none" id="imageUpload" accept=".png, .jpg, .jpeg">
                                    <label for="imageUpload" class="dlab-upload mb-0 btn btn-primary btn-sm">Şəkil seç</label>
                                    <a href="javascript:void" class="btn btn-danger light remove-img ms-2 btn-sm">Sil</a>
                                </div>
                            </div>
                        </div>
                        <br />
                        <div class="col-xl-9 col-lg-8">
                            <div class="row">
                                <div class="col-xl-6 col-sm-6">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label text-primary">Başlıq:<span class="required">*</span></label>
                                        <input asp-for="Title" type="text" class="form-control" id="exampleFormControlInput1">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput3" class="form-label text-primary">Başlama vaxtı<span class="required">*</span></label>
                                        <input asp-for="StartDate" type="date" class="form-control" id="exampleFormControlInput3">
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput5" class="form-label text-primary">Şifrə təkrarı:<span class="required">*</span></label>
                                        <textarea asp-for="Content" type="text" class="form-control" id="editor"></textarea>
                                        <span asp-validation-for="Content" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-sm-6">
                                    <label for="exampleFormControlInput5" class="form-label text-primary">Mağaza:<span class="required">*</span></label>
                                    <select asp-for="StoreID" asp-items="ViewBag.sv" class="default-select form-control wide mb-3">
                                        <option>Mağaza seç...</option>
                                    </select>
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput3" class="form-label text-primary">Başlama vaxtı<span class="required">*</span></label>
                                        <input asp-for="EndDate" type="date" class="form-control" id="exampleFormControlInput3">
                                    </div>
                                </div>

                            </div>
                            <button type="submit" class="btn btn btn-success">
                                <span class="btn-icon-start text-success">
                                    <i class="fa fa-save color-success"></i>
                                </span>Yaddaşda saxla!
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/ckeditor5-build-classic/ckeditor.js"></script>
<script>
    ClassicEditor
        .create(document.querySelector('#editor'), {
        })
        .then(editor => {
            window.editor = editor;
        })
        .catch(err => {
            console.error(err.stack);
        });
</script>