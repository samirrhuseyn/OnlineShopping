@model OnlineShopping.Areas.Admin.Models.EditStoreViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditStore";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <form method="post" enctype="multipart/form-data" asp-controller="Store" asp-action="EditStore">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="StoreID" hidden/>
                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-3 col-lg-4">
                            <label class="form-label text-primary">Mağaza logosu:<span class="required">*</span></label>
                            <div class="avatar-upload">
                                <div class="avatar-preview">
                                    <div id="imagePreview" style="height:150px; width:150px;background-image: url(@Model.LogoPreviev);">
                                    </div>
                                </div>
                                <div class="change-btn mt-2 mb-lg-0 mb-3">
                                    <input asp-for="LogoImage" type='file' class="form-control d-none" id="imageUpload" accept=".png, .jpg, .jpeg">
                                    <label for="imageUpload" class="dlab-upload mb-0 btn btn-primary btn-sm">Şəkil seçin!</label>
                                    <a href="javascript:void" class="btn btn-danger light remove-img ms-2 btn-sm">Şəkili silin!</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-9 col-lg-8">
                            <div class="row">
                                <div class="col-xl-6 col-sm-6">
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput1" class="form-label text-primary">Mağaza adı:<span class="required">*</span></label>
                                        <input asp-for="Name" type="text" class="form-control" id="exampleFormControlInput1">
                                    </div>
                                    <div class="mb-3">
                                        <label for="exampleFormControlInput4" class="form-label text-primary">Ünvan:<span class="required">*</span></label>
                                        <input asp-for="Adress" type="text" class="form-control" id="exampleFormControlInput4">
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn btn-success">
                                <span class="btn-icon-start text-success">
                                    <i class="fa fa-save color-success"></i>
                                </span>Yaddaşda saxla!
                            </button>
                        </div>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>