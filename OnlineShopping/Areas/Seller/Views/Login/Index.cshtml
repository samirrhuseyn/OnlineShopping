@using OnlineShopping.Models
@model LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!doctype html>
<html lang="en">


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Giriş - Yazarlar paneli</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/vetra/assets/images/favicon.png" />

    <!-- Themify icons -->
    <link rel="stylesheet" href="~/vetra/dist/icons/themify-icons/themify-icons.css" type="text/css">

    <!-- Main style file -->
    <link rel="stylesheet" href="~/vetra/dist/css/app.min.css" type="text/css">

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="auth">

    <!-- begin::preloader-->
    <div class="preloader">
        <div class="preloader-icon"></div>
    </div>
    <!-- end::preloader -->


    <div class="form-wrapper">
        <div class="container">
            <div class="card">
                <div class="col">
                    <div class="row">
                        <div class="col-md-10 offset-md-1">
                            <div class="d-block d-lg-none text-center text-lg-start">
                                <img width="120" src="https://vetra.laborasyon.com/assets/images/logo.svg" alt="logo">
                            </div>
                            <div class="my-5 text-center text-lg-start">
                                <h1 class="display-8">Giriş</h1>
                                <p class="text-muted">Satıcı panelinə giriş edin!</p>
                            </div>
                            <form method="post" asp-action="Index" asp-controller="Login" class="mb-5">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="mb-3">
                                    <input asp-for="Username" type="text" class="form-control" placeholder="İstifadəçi adı"
                                           required>
                                </div>
                                <div class="mb-3">
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifrə"
                                           required>
                                </div>
                                <div class="text-center text-lg-start">
                                    <p class="small">Hesabının şifrəsini unutmusan? <a href="#">Şifrəni indi yenilə!</a>.</p>
                                    <button type="submit" class="btn btn-primary">Giriş</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- Bundle scripts -->
    <script src="~/vetra/libs/bundle.js"></script>

    <!-- Main Javascript file -->
    <script src="~/vetra/dist/js/app.min.js"></script>
</body>


</html>